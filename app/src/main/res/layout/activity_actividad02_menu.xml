<?xml version="1.0" encoding="utf-8"?>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.jorji.unacarrera.MENU.Actividad02_MENU">

        <ImageView
            android:id="@+id/btnCronograma"
            android:layout_width="177dp"
            android:layout_height="140dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/icon1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="68dp" />

    <ImageView
        android:id="@+id/btnMatricula"
        android:layout_width="163dp"
        android:layout_height="171dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/icon4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="CRONOGRAMA"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCronograma" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="4dp"
            android:text="MATRICULA"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMatricula" />

        <ImageView
            android:id="@+id/btnStatus"
            android:layout_width="173dp"
            android:layout_height="157dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="268dp"
            android:src="@drawable/icon32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="117dp"
            android:layout_height="55dp"
            android:layout_marginStart="52dp"
            android:text="    STATUS ACADEMICO"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnStatus" />

        <ImageView
            android:id="@+id/btnMalla"
            android:layout_width="137dp"
            android:layout_height="155dp"
            android:layout_marginTop="268dp"
            android:src="@drawable/icon51"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="131dp"
            android:layout_height="64dp"
            android:text="     MALLA CURRICULAR"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMalla" />

    <View
        android:id="@+id/divider"
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="268dp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="1dp"
        android:layout_height="495dp"
        android:background="?android:attr/listDivider"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="8dp" />

</android.support.constraint.ConstraintLayout>
